{
  "jsxSingleQuote": true,
  "printWidth": 100,
  "semi": false,
  "singleAttributePerLine": true,
  "singleQuote": true,
  "tabWidth": 2,
  "trailingComma": "es5",
  "arrowParens": "avoid",
  "importOrder": ["^src/", "^[./]"],
  "importOrderCaseInsensitive": true,
  "importOrderSortSpecifiers": true,
  "plugins": ["@trivago/prettier-plugin-sort-imports", "prettier-plugin-tailwindcss"],
  "proseWrap": "always",
  "tailwindFunctions": ["classNames", "cn", "twMerge"]
}
